/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // bs + a!s
    Not(in=sel, out=ns);
    And(a=b, b=sel, out=bs);
    And(a=a, b=ns, out=as);

    Or(a=bs, b=as, out=out);
}